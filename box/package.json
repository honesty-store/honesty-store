{
  "name": "@honesty-store/box",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "tsc": "../node_modules/.bin/tsc",
    "rollup": "../node_modules/.bin/rollup -c ../rollup.config.js",
    "uglifyjs": "../node_modules/.bin/uglifyjs lib/bundle.js > lib/bundle-min.js",
    "build": "npm run tsc && npm run rollup && npm run uglifyjs",
    "test": "../node_modules/.bin/jest",
    "ci": "npm run build && npm run test"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/chai": "^3.4.35",
    "@types/express": "^4.0.34",
    "@types/jest": "^19.2.0",
    "@types/node": "0.0.2",
    "aws-sdk": "2.22.0",
    "chai": "^3.5.0",
    "jest": "^19.0.0",
    "mocha": "^3.2.0",
    "ts-jest": "^19.0.0"
  },
  "dependencies": {
    "@honesty-store/batch": "file:../batch",
    "@honesty-store/service": "file:../service",
    "@honesty-store/store": "file:../store",
    "@honesty-store/user": "file:../user"
  },
  "main": "lib/src/index.js",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!@honesty-store)"
    ]
  }
}
