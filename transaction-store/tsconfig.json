{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "strict": true,
        "outDir": "lib",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "lib": [
            "esnext",
            "esnext.asynciterable"
        ],
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts"
    ]
}
