{
  "extends": "tslint:recommended",
  /*
    "extends": "tslint-microsoft-contrib"
    => needs to be updated to work with v5 of tslint: see https://github.com/Microsoft/tslint-microsoft-contrib/issues/354
  */
  "rulesDirectory": [
    "./node_modules/tslint-eslint-rules/dist/rules"
  ],
  "rules": {
    "interface-name": [true, "never-prefix"],
    "no-any": false,
    "no-require-imports": false,
    "no-default-export": false,
    "no-invalid-this": false,
    "variable-name": [true, "check-format", "allow-leading-underscore"],
    "ter-indent": [true, 2, { "SwitchCase": 1 }],

    /* Temporarily use tslint:recommended with a few tweaks to better match microsoft-contriv */
    "quotemark": false,
    "no-angle-bracket-type-assertion": false,
    "trailing-comma": false,
    "callable-types": false,
    "object-literal-sort-keys": false,
    "object-literal-key-quotes": false,
    "max-line-length": false,
    "arrow-parens": false,
    "ban-types": false,
    "space-before-function-paren": false,
    "object-literal-shorthand": false,
    "whitespace": false

    /*
    These rules are provided by microsoft-contrib:
    "missing-jsdoc": false,
    "no-backbone-get-set-outside-model": false,
    "import-name": false,
    "no-reserved-keywords": false,
    "no-relative-imports": false,
    "no-suspicious-comment": false,
    "export-name": false,
    "max-func-body-length": false,
    "no-multiline-string": false,
    "prefer-type-cast": false
    */
  }
}