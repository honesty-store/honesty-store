{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "strict": true,
        "outDir": "lib",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "lib": [
            "esnext",
            "esnext.asynciterable"
        ]
    },
    "include": [
        "src/**/*",
        "node_modules/@honesty-store/*/src"
    ],
    "exclude": [
        "node_modules/@honesty-store/*/node_modules",
        "node_modules/@honesty-store/*/src/**/*.test.ts"
    ]
}
